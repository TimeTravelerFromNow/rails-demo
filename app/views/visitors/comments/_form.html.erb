<%= form_with model: [@article, @article.comments.build] do |form| %>
  <p>
   Commenting as: <%= current_user.email %>

  </p>
  <p>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
  </p>

  <p>
  <%=form.label :status %><br>
  <%=form.select :status, ['public', 'private'], selected: :status%>
  </p>

  <p>
  <%= form.submit %>
  </p>

  <p>

<% end %>
