<div class="card paragraph">
  <div class="md-row">
    <p>
       <strong>Commenter:</strong>
       <%= comment.commenter %>
    </p>

    <p>
    <strong>Comment:</strong>
    <%= comment.body %>
    </p>

    <p>
    <%= link_to "destroy Comment", [comment.article, comment],
                data: {
                turbo_method: :delete,
                turbo_confirm: "Are you Sure?"
    } %>

    </p>
    <p>
      <%= link_to 'make public', makepublic_article_comment_path(@article, comment), method: :put,
                  data: { turbo_confirm: "Are you Sure?"} %><br>
      status: <%= comment.status %>
    </p>

  </div>
</div>
