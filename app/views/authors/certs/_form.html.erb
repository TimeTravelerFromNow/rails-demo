
     <%= form_with model: @cert do |form| %>
           <div class= "form-group">
             <%= form.text_field :title, class: 'form-control' %><br>
             <% cert.errors.full_messages_for(:title).each do |message| %>
              <div><%= message %></div>
             <% end %>

             <div class="form-group">
               <%= form.label :header_image %>
               <%= form.file_field :header_image, class: 'form-control' %>
               <% if cert.header_image.present? %>
                 <small>current image:</small>
                 <%= image_tag(cert.header_image , width: '100%') %>
               <% end %>
             </div>

             <%= form.rich_text_area :description, class: 'form-control'%>
             <div class="mb-3">
               <% cert.errors.full_messages_for(:description).each do |message| %>
                <div><%= message %></div>
               <% end %>
               <%= form.datetime_select :date_awarded, class: 'form-control' %>
               <% cert.errors.full_messages_for(:date_awarded).each do |message| %>
              <div><%= message %></div>
             <% end %>
             </div>


          </div>

      <%= form.submit "Submit", class: "btn btn-outline-primary"%>
      <%= link_to "Back", certs_path, class: 'btn btn-outline-secondary'%>
      <% if cert.id? %>
      <%= link_to "Delete", cert_path(cert), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
      <% end %>
<% end %>
